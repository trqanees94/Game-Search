<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.tariq.gamesearch.GameClassActivity"
    tools:showIn="@layout/activity_game_class">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/icon"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_below="@+id/icon"
        android:textSize="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"/>

    <TextView
        android:layout_below="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"/>

    <TextView
        android:layout_below="@+id/textView2"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/textView3"
        android:paddingTop="50dp"/>

    <Button
        android:layout_width="wrap_content"
        android:text="ReadMore"
        android:layout_height="wrap_content"
        android:id="@+id/readMoreButton"
        android:layout_below="@+id/textView3"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/readMoreButton"
        android:paddingTop="50dp"
        android:visibility="visible"
        android:id="@+id/topLine"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GameClassActivity"
        android:layout_below="@+id/readMoreButton">

    <LinearLayout
        android:id="@+id/instructionLayout"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
                android:textSize="20dp"
                android:layout_below="@+id/readMoreButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/textPopUp"/>
    <TextView
        android:textSize="20dp"
        android:layout_below="@+id/textPopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/textPopUp1"/>
    <TextView
        android:textSize="20dp"
        android:layout_below="@+id/textPopUp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/textPopUp2"/>
    <TextView
        android:textSize="20dp"
        android:layout_below="@+id/textPopUp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/textPopUp3"/>
    <TextView
        android:textSize="20dp"
        android:layout_below="@+id/textPopUp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/textPopUp4"/>
    <TextView
        android:textSize="20dp"
        android:layout_below="@+id/textPopUp4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/textPopUp5"/>

        <View
            android:id="@+id/bottomLine"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/textView3"
            android:paddingTop="50dp"/>
    </LinearLayout>

    </ScrollView>

</RelativeLayout>


